<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="179.0" prefWidth="374.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.agapovla.controller.part.PartFormController">

    <Label layoutX="20.0" layoutY="20.0" style="-fx-font-size: 18;" text="Меню добавления новой запчасти" />

    <Label layoutX="20" layoutY="60" text="Номер запчасти:" />
    <TextField fx:id="partNumberField" layoutX="130" layoutY="60" />

    <Label layoutX="20" layoutY="100" text="Производитель:" />
    <TextField fx:id="manufacturerField" layoutX="130" layoutY="100" />

    <Label layoutX="20" layoutY="140" text="Краткое описание:" />
    <TextField fx:id="shortInfoField" layoutX="130" layoutY="140" />

    <Label layoutX="470.0" layoutY="25.0" text="Полное писание:" />
    <TextArea fx:id="fullInfoField" layoutX="340.0" layoutY="60.0" prefHeight="200" prefWidth="380.0" wrapText="true" />

    <Label layoutX="20" layoutY="180" text="Цена за штуку:" />
    <TextField fx:id="unitPriceField" layoutX="130" layoutY="180" />

    <Label layoutX="20" layoutY="220" text="Количество:" />
    <TextField fx:id="amountField" layoutX="130" layoutY="220" />

    <Label layoutX="20" layoutY="260" text="Подходит?" />
    <CheckBox fx:id="doesFitCheckBox" layoutX="130" layoutY="260" text="Да" />

    <Label layoutX="20" layoutY="300" text="Установлена?" />
    <CheckBox fx:id="isInstalledCheckBox" layoutX="130" layoutY="300" text="Да" />

    <Button layoutX="20.0" layoutY="340.0" mnemonicParsing="false" onAction="#onSavePart" text="Сохранить!" />

    <Label layoutX="20" layoutY="370" text="Фотографии:" />
    <Button layoutX="20" layoutY="390" mnemonicParsing="false" onAction="#onAddPhotos" text="Выбрать фото" />
    <FlowPane fx:id="photoPreviewPane" hgap="10" layoutX="20" layoutY="470" prefHeight="120" prefWidth="520" vgap="10" />

</AnchorPane>
